<%- layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" placeholder="example: Raditor Springs"
                        name="campground[title]" required>
                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback"> Please give a valid content</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="loc">Location</label>
                    <input class="form-control" type="text" id="loc" placeholder="City, State"
                        name="campground[location]" required>
                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback"> Please give a valid content</div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" placeholder="http://..." name="campground[image]"
                        required>
                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback"> Please give a valid content</div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="Price"
                            aria-describedby="price-label" id="price" name="campground[price]" required>
                    </div>
                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback"> Please give a valid content</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">description</label>
                    <textarea class="form-control" type="text" id="description"
                        placeholder="Something about the campground" name="campground[description]" required></textarea>
                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback"> Please give a valid content</div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Upload Image(s)</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Create</button>
                </div>
                <footer class="mb-3">
                    <a href="/campgrounds">Back to All Campgrounds</a>
                </footer>
            </form>
        </div>
    </div>
