<%- layout("layouts/boilerplate") %>

    <div class="row">
        <h1 class="text-center"><span class="text-info">Edit</span>
            <%= campground.title %>
        </h1>
        <div class="col-md-6 offset-md-3">
            <form method="post" action="/campgrounds/<%= campground._id %>?_method=PUT" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input value="<%= campground.title %>" class="form-control" type="text" id="title"
                        placeholder="example: Raditor Springs" name="campground[title]" required>
                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback"> Please give a valid content</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="loc">Location</label>
                    <input value="<%= campground.location %>" class="form-control" type="text" id="loc"
                        placeholder="City, State" name="campground[location]" required>
                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback"> Please give a valid content</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input value="<%= campground.price %>" type="text" class="form-control" placeholder="0.00"
                            aria-label="Price" aria-describedby="price-label" id="price" name="campground[price]"
                            required>
                    </div>
                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback"> Please give a valid content</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">description</label>
                    <textarea class="form-control" type="text" id="description"
                        placeholder="Something about the campground" name="campground[description]"
                        required><%= campground.description %></textarea>
                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback"> Please give a valid content</div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Add more Image(s)</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach( function (img, i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i %>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%=i %>">Delete?</label>
                    <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Save</button>
                </div>
                <footer>
                    <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
                </footer>
            </form>
        </div>
    </div>

